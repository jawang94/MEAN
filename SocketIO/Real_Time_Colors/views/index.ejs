<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Real Time Colors</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">
      $(document).ready(function() {
        var socket = io.connect("http://localhost:8000");

        $("#green").click(function(e) {
          console.log("click");
          socket.emit("green", {
            color: "green"
          });
        });
        $("#blue").click(function(e) {
          console.log("click");
          socket.emit("blue", {
            color: "blue"
          });
        });
        $("#pink").click(function(e) {
          console.log("click");
          socket.emit("pink", {
            color: "pink"
          });
        });

        socket.on("background-green", function(data) {
          var container = document.getElementById("container");
          container.setAttribute(
            "style",
            "background-color: " + data.color + ";"
          );
        });
        socket.on("background-blue", function(data) {
          var container = document.getElementById("container");
          container.setAttribute(
            "style",
            "background-color: " + data.color + ";"
          );
        });
        socket.on("background-pink", function(data) {
          var container = document.getElementById("container");
          container.setAttribute(
            "style",
            "background-color: " + data.color + ";"
          );
        });
      });
    </script>
  </head>
  <body>
    <div id="container">
      <button id="green">Green</button> <button id="blue">Blue</button>
      <button id="pink">Pink</button>
    </div>
  </body>
</html>
